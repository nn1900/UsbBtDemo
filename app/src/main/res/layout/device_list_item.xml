<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="44dp">
  <TextView
    android:id="@+id/device_type_label"
    style="@style/DeviceStyle.TypeLabel"
    android:layout_width="44dp"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="B"
    />
  <TextView
    android:id="@+id/device_name_label"
    style="@style/DeviceStyle.NameLabel"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/device_type_label"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Some connected device" />
</androidx.constraintlayout.widget.ConstraintLayout>